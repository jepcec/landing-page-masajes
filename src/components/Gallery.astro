---
const images = [
  "/images/cama.webp",
  "/images/cama1.webp",
  "/images/cama2.webp",
  "/images/cama3.webp",
  "/images/cama4.webp",
  "/images/cama5.webp",
  "/images/piedras.webp",
  "/images/piedras1.webp",
  "/images/piedras2.webp",
  "/images/piedras3.webp",
  "/images/piedras4.webp",
  "/images/piedras5.webp",
  "/images/pintura.webp",
  "/images/pintura1.webp",
];
---

<section id="gallery" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-teal-800 mb-12 text-center">
      Our Space
    </h2>

    <div class="flex flex-wrap justify-center gap-3 md:gap-4">
      {images.map((img) => (
        <div
          class="overflow-hidden rounded-xl shadow-md group aspect-[3/4] w-[calc(50%-0.375rem)] sm:w-[calc(33.333%-0.5rem)] lg:w-[calc(25%-0.75rem)]"
        >
          <img
            src={img}
            alt="Spa interior"
            width="300"
            height="400"
            loading="lazy"
            decoding="async"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
        </div>
      ))}
    </div>
  </div>
</section>